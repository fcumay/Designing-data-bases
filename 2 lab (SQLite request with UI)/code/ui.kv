<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text:'Технолог'
            background_normal: ''
            background_color: 1,.71,.73,1
            color: 0,0,0,1
            on_press:
                root.manager.current = 'technologist'

        Button:
            text:'Оператор'
            background_normal: ''
            background_color: .54,.78,.82,1
            color: 0,0,0,1
            on_press: root.manager.current = 'operator'



<TechnologistScreen>:
    BoxLayout:
        orientation:'vertical'
        padding: 10
        spacing: 5
        Button:
            text:'Клиенты'
            background_normal: ''
            background_color: 1,.71,.73,1
            color: 0,0,0,1
            on_press:
                root.manager.current = 'clients'
        Button:
            text:'Тариф'
            background_normal: ''
            background_color: 1,.71,.73,1
            color: 0,0,0,1
            on_press: root.manager.current = 'tarif'

        Button:
            text:'Доступные тарифы в компании'
            background_normal: ''
            background_color: 1,.71,.73,1
            color: 0,0,0,1
            on_press: root.manager.current = 'searchbycompany'

        Button:
            text:'Поиск стоимости по дате'
            background_normal: ''
            background_color: 1,.71,.73,1
            color: 0,0,0,1
            on_press: root.manager.current = 'searchpricebydate'


<ClientsScreen>
    BoxLayout:
        Button:
            text: 'Назад'
            background_normal: ''
            background_color: 1,.71,.73,1
            color: 0,0,0,1
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'technologist'
            size_hint: .1,1
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    id:id_phonenumber_label
                    text: 'Номер телефона '
                    color: 0,0,0,1
                Label:
                    id:id_fullname_label
                    text: 'ФИО'
                    color: 0,0,0,1
                Label:
                    id:id_city_label
                    text: 'Населённый пункт'
                    color: 0,0,0,1
                Label:
                    id:id_date_label
                    text: 'Дата'
                    color: 0,0,0,1

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1,.1
                Button:
                    text:'Обновить'
                    background_normal: ''
                    background_color: .78,.57,.87,.8
                    color: 0,0,0,1
                    on_press: root.show_clients()
                Button:
                    text:'Добавить'
                    background_normal: ''
                    background_color: .78,.57,.87,.8
                    color: 0,0,0,1
                    on_press: root.manager.current = 'addclient'
                Button:
                    text:'Изменить'
                    background_normal: ''
                    background_color: .78,.57,.87,.8
                    color: 0,0,0,1
                    on_press: root.manager.current = 'clients'
                Button:
                    text:'Удалить'
                    background_normal: ''
                    background_color: .78,.57,.87,.8
                    color: 0,0,0,1
                    on_press: root.manager.current = 'delclient'


<AddClientScreen>:
    BoxLayout:
        Button:
            text: 'Назад'
            background_color: .78,.57,.87,.8
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'clients'
            size_hint: .1,1
        BoxLayout:
            padding:50
            spacing:20
            orientation: 'vertical'
            TextInput:
                id:phone_number
                hint_text:'Номер телефона'
            TextInput:
                id:full_name
                hint_text:'ФИО'
            TextInput:
                id:address
                hint_text:'Населённый пункт'
            TextInput:
                id:date
                hint_text:'Дата'
            Button:
                on_press: root.add(phone_number.text,full_name.text,address.text,date.text)
                text: 'Добавить'
                background_color: .78,.57,.87,.8

